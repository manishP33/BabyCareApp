<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Recipes</h1>

  <table class="table table-bordered">
    <thead>
      <tr>

        <th>Title</th>
        <th>Name</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each_with_index do |recipe, i| %>


        <tr>

          <td><%= (i+1) %>.<%= recipe.title %></td>
          <td><%= recipe.name %></td>
          <td><%= recipe.image_url %></td>
          <td><%= link_to 'Show', recipe %></td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>



<button type="button" name="button"><%= link_to 'New Recipe', new_recipe_path %></button>

</div>
